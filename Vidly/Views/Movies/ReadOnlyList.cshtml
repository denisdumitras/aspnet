@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td style="width: 16.66%">@Html.ActionLink(movie.Name, "Index", "Movies", null, null)</td>
                <td style="width: 16.66%">@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>

